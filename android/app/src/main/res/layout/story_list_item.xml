<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/story_image_icon_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/story_list_item_image"
        android:src="@drawable/downloading"
        android:contentDescription="@string/app_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/story_image_icon_padding"
        android:layout_width="@dimen/story_image_icon_side"
        android:layout_height="@dimen/story_image_icon_side" />

    <TextView
        android:id="@+id/story_list_item_name"
        android:text="Name"
        android:textSize="@dimen/story_name_text_size"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/story_list_item_image"
        android:layout_toEndOf="@id/story_list_item_image"
        android:layout_marginTop="@dimen/story_image_icon_padding"
        android:layout_marginBottom="@dimen/story_image_icon_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/story_list_item_description"
        android:text="Description"
        android:textSize="@dimen/story_description_text_size"
        android:layout_below="@id/story_list_item_name"
        android:layout_toRightOf="@id/story_list_item_image"
        android:layout_toEndOf="@id/story_list_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>